{
    "animationNamePattern": "BasicMotions@*.ozz",
    "states": {
        "locomotion": {
            "tween": {
                "duration": 0.5
            },
            "elements": [
                {
                    "animation": "Idle01",
                    "value": [ 0, 0 ]
                },
                {
                    "animation": "Run01 - Backwards",
                    "value": [ 0, -1 ]
                },
                {
                    "animation": "Run01 - BackwardsLeft",
                    "value": [ 1, -1 ]
                },
                {
                    "animation": "Run01 - BackwardsRight",
                    "value": [ -1, -1 ]
                },
                {
                    "animation": "Run01 - Forwards",
                    "value": [ 0, 1 ]
                },
                {
                    "animation": "Run01 - ForwardsLeft",
                    "value": [ -1, 1 ]
                },
                {
                    "animation": "Run01 - ForwardsRight",
                    "value": [ 1, 1 ]
                },
                {
                    "animation": "Run01 - Left",
                    "value": [ -1, 0 ]
                },
                {
                    "animation": "Run01 - Right",
                    "value": [ 1, 0 ]
                }
            ],
            "threshold": 0.2,
            "blend": "directional"
        },
        "talk": {
            "animation": "Talk01"
        }
    },
    "transitions": {
        "locomotion>talk": {
            "duration": 0.5
        },
        "talk>locomotion": {
            "duration": 0.5
        }
    }
}