{
    "animationNamePattern": "*.ozz",
    "states": {
        "locomotion": {
            "tween": {
                "duration": 0.5
            },
            "elements": [
                {
                    "animation": "Idle01",
                    "value": [ 0, 0 ]
                },
                {
                    "animation": "Run01_Backward",
                    "value": [ 0, -1 ]
                },
                {
                    "animation": "Run01_BackwardLeft",
                    "value": [ 1, -1 ]
                },
                {
                    "animation": "Run01_BackwardRight",
                    "value": [ -1, -1 ]
                },
                {
                    "animation": "Run01_Forward",
                    "value": [ 0, 1 ]
                },
                {
                    "animation": "Run01_ForwardLeft",
                    "value": [ -1, 1 ]
                },
                {
                    "animation": "Run01_ForwardRight",
                    "value": [ 1, 1 ]
                },
                {
                    "animation": "Run01_Left",
                    "value": [ -1, 0 ]
                },
                {
                    "animation": "Run01_Right",
                    "value": [ 1, 0 ]
                }
            ],
            "threshold": 0.2,
            "blend": "Directional"
        },
        "talk": {
            "animation": "Talk01"
        }
    },
    "transitions": {
        "locomotion>talk": {
            "duration": 0.5
        },
        "talk>locomotion": {
            "duration": 0.5
        }
    }
}