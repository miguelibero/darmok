{
  "name": "darmok",
  "version": "0.1.1",
  "homepage": "https://github.com/miguelibero/darmok",
  "description": "A hobby C++ game engine.",
  "license": "MIT",
  "dependencies": [
    {
      "name" : "vcpkg-cmake",
      "host" : true
    },
    {
      "name" : "vcpkg-cmake-config",
      "host" : true
    },
    {
      "name": "bgfx",
      "features": [ "multithreaded", "tools" ]
    },
    {
      "name": "imgui",
      "features": ["freetype"]
    },
    {
      "name": "rmlui",
      "features": ["freetype", "lua"]
    },
    "glfw3",
    "assimp",
    "cereal",
    "entt",
    "glm",
    "joltphysics",
    "lua",
    "sol2",
    "nlohmann-json",
    "pugixml",
    "tweeny"
  ],
  "features": {
    "lua": {
      "description": "Build lua support",
      "dependencies": [ "luajit" ]
    },    
    "samples": {
      "description": "Build samples"
    },
    "editor": {
      "description": "Build editor",
      "dependencies": [ "wxwidgets" ]
    },
    "tests": {
      "description": "Build Tests",
      "dependencies": [ "catch2" ]
    }
  }
}